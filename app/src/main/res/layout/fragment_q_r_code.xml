<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2C2C"
    tools:context=".Lineup">

    <Button
        android:id="@+id/showQRCode"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/main_darker"
        android:text="Show Ur QR Code"
        android:textAllCaps="false"
        android:textColor="@color/text"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To pay or let someone add U as a buddy"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="@+id/showQRCode"
        app:layout_constraintStart_toStartOf="@+id/showQRCode"
        app:layout_constraintTop_toBottomOf="@+id/showQRCode" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add someone as Ur buddy"
        android:textColor="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/bottom_menu"
        app:layout_constraintEnd_toEndOf="@+id/scanQRCode"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/scanQRCode"
        app:layout_constraintTop_toBottomOf="@+id/scanQRCode"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/scanQRCode"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/main_darker"
        android:text="Scan a QR Code"
        android:textAllCaps="false"
        android:textColor="@color/text"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="@+id/showQRCode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/showQRCode"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

</androidx.constraintlayout.widget.ConstraintLayout>